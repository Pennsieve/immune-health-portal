PENNSIEVE_API2_HOST=https://api2.pennsieve.net
PENNSIEVE_DISCOVER_API_HOST=https://api.pennsieve.net/discover

# AWS Cognito Configuration (required for Pennsieve auth)
USER_POOL_ID=us-east-1_XXXXXXXXX
USER_POOL_WEB_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
